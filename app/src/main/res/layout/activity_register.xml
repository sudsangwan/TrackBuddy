<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_app_color"
    android:orientation="vertical"
    android:windowSoftInputMode="adjustResize"
    tools:context="com.santellia.sud.trackbuddy.activities.RegisterActivity">


    <LinearLayout
        android:id="@+id/llLoginLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal|bottom">


            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_app"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/splash_text_color"
                android:text="@string/app_name"
                android:textStyle="bold"
                android:textSize="50sp"/>

        </LinearLayout>

        <EditText
            android:id="@+id/etCountryCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:hint="Enter your country code"
            android:inputType="number"
            android:maxLength="10"
            android:background="@color/white_color" />

        <EditText
            android:id="@+id/etMobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:hint="Enter your mobile number"
            android:inputType="number"
            android:maxLength="10"
            android:background="@color/white_color" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:ems="10"
            android:hint="ENTER OTP"
            android:inputType="number"
            android:maxLength="4"
            android:visibility="gone"
            android:background="@color/white_color" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:hint="Enter your Name"
            android:inputType="text"
            android:visibility="gone"
            android:background="@color/white_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvResendOTP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:padding="5dp"
                android:text="Resend OTP"
                android:textColor="@color/button_color"
                android:textSize="@dimen/text_medium"
                android:textStyle="normal"
                android:layout_weight="1"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tvChangeNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center_vertical|right"
                android:padding="5dp"
                android:text="Change Number"
                android:textColor="@color/button_color"
                android:textSize="@dimen/text_medium"
                android:textStyle="normal"
                android:layout_weight="1"
                android:visibility="gone"/>

        </LinearLayout>



        <TextView
            android:id="@+id/tvRequestOTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_button"
            android:gravity="center_vertical|center_horizontal"
            android:padding="8dp"
            android:text="REQUEST OTP"
            android:textColor="#f6f6f6"
            android:textSize="@dimen/text_medium"
            android:textStyle="normal"/>


        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_button"
            android:gravity="center_vertical|center_horizontal"
            android:padding="8dp"
            android:text="LOG IN"
            android:textColor="#f6f6f6"
            android:textSize="@dimen/text_medium"
            android:textStyle="normal"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvOTPMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center_vertical|center_horizontal"
            android:padding="5dp"
            android:text="We have sent you OTP on this number. Kindly wait !"
            android:inputType="textMultiLine"
            android:textColor="@color/white_color"
            android:textSize="@dimen/text_medium"
            android:textStyle="normal"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            />
    </LinearLayout>

</RelativeLayout>
